<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.singUp.SingUpActivity"
    android:scrollbars="vertical"
    android:background="@color/md_theme_light_onPrimary"


    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_onPrimary"
        android:orientation="vertical"
        android:padding="25dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/md_theme_light_onPrimary"

        >

        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"

            android:contentDescription="@string/close_sing_up"

            app:srcCompat="@drawable/baseline_clear_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="@string/sign_up"
            android:textSize="35sp"

            android:elegantTextHeight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/login"
            android:textSize="20sp"
            android:textColor="@color/md_theme_light_primary" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/nametextbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginVertical="15dp"
        android:hint="@string/full_name"
        android:autofillHints="name"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:maxLength="15"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"

            android:id="@+id/warning_name"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                android:layout_marginHorizontal="5dp"

                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="@string/avoid_using_special_characters_in_your_name"
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>


    <EditText
        android:id="@+id/emailTextBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:layout_marginVertical="15sp"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:autofillHints="emailAddress"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:maxLength="15"

        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/warning_email"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                android:layout_marginHorizontal="5dp"

                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="@string/your_email_may_not_have_the_structure_of_a_email_n_user_your_institutional_email"
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordTextbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginVertical="15sp"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:hint="@string/password"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        android:maxLength="15"


        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/warning_password"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="@string/your_password_is_not_secure_enough_n_check_for_n_at_least_8_characters_n_at_least_1_special_character_n_at_least_1_number_character"
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>




        <CheckBox
            android:id="@+id/driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_am_a_driver_optional"
            android:textColor="@color/common_google_signin_btn_text_light"/>

        <CheckBox
            android:id="@+id/id_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_would_like_to_receive_your_newsletter_and_other_promotional_information"
            android:textColor="@color/common_google_signin_btn_text_light"/>

        <Button
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="20sp"
            app:backgroundTint="@color/md_theme_light_primary"
            app:cornerRadius="100dp"
            android:layout_marginVertical="20dp"
            android:id="@+id/singUpbutton"


            />
    </LinearLayout>

    </LinearLayout>





