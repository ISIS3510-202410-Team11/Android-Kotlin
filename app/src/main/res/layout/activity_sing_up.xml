<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.singUp.SingUpActivity"
    android:scrollbars="vertical"
    android:background="@color/md_theme_light_onPrimary"


    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_onPrimary"
        android:orientation="vertical"
        android:padding="25dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/md_theme_light_onPrimary"

        >

        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"

            android:contentDescription="Close Sing UP"

            app:srcCompat="@drawable/baseline_clear_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="Sign Up"
            android:textSize="35sp"

            android:elegantTextHeight="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="@color/md_theme_light_primary" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/nametextbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginVertical="15dp"
        android:hint="Full Name"
        android:autofillHints="name"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"


        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"

            android:id="@+id/warning_name"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                android:layout_marginHorizontal="5dp"

                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="Avoid using special characters in your name"
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>


    <EditText
        android:id="@+id/emailTextBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginVertical="15sp"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:autofillHints="emailAddress"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"

        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/warning_email"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                android:layout_marginHorizontal="5dp"

                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="- Your email may not have the structure of a email.\n - User your institutional email."
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>
    <EditText
        android:id="@+id/passwordTextbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginVertical="15sp"
        android:textSize="20sp"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:hint="Password"
        android:autofillHints="password"
        android:background="@drawable/edit_text_border"
        android:textColorHint="@color/common_google_signin_btn_text_light"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/warning_password"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_error_24"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/design_default_color_error"
                    android:text="Your password is not secure enough. \n Check for: \n - At least 8 characters
                    \n - At least 1 special character \n - At least 1 number character"
                    android:textSize="15sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>




        <CheckBox
            android:id="@+id/driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am a driver (Optional)"
            android:textColor="@color/common_google_signin_btn_text_light"/>

        <CheckBox
            android:id="@+id/id_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I would like to receive your newsletter and other promotional information."
            android:textColor="@color/common_google_signin_btn_text_light"/>

        <Button
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_onPrimary"
            android:textSize="20sp"
            app:backgroundTint="@color/md_theme_light_primary"
            app:cornerRadius="100dp"
            android:layout_marginVertical="20dp"
            android:id="@+id/singUpbutton"


            />
    </LinearLayout>

    </LinearLayout>





