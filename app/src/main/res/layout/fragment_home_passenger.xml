<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePassengerFragment"
    android:background="@color/md_theme_light_onPrimary"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:thumbTint="#5DB075"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Car Pooling"
            android:textSize="38sp"
          />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:thumbTint="#5DB075"
            android:visibility="invisible"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Where are you heading today?"
                android:textSize="22sp"
                android:layout_margin="10dp"
                />

            <com.google.android.material.search.SearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Where to?"
                android:autofillHints="postalAddress"
                android:layout_marginTop="15dp"


                />


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:fillViewport="true"

            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginHorizontal="30dp"
                android:nestedScrollingEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:fadeScrollbars="false"
                android:scrollbars="vertical">


            </androidx.recyclerview.widget.RecyclerView>

            


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/boder_notification"
            android:layout_margin="30dp"
            android:elevation="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why donâ€™t giving a try to a bike commute?"
                android:textSize="18sp"
                android:layout_margin="25dp"

                />



            <Button
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textAlignment="textStart"
                android:textColor="@color/md_theme_light_onPrimary"
                android:textSize="20sp"
                android:backgroundTint="@color/md_theme_light_primary"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"

                android:layout_marginHorizontal="30dp"


                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>