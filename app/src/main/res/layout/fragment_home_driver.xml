<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDriverFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:thumbTint="#5DB075" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Car Pooling"
            android:textSize="38sp"
          />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/outline_account_circle_24" />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Where are you heading today?"
                android:textSize="22dp"
                />

            <com.google.android.material.search.SearchBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Where to?"
                android:autofillHints="postalAddress"


                />


        </LinearLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none"

            >
            <LinearLayout
                android:id="@+id/whereTo"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            


        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/boder_notification"
            android:layout_margin="30dp"
            android:elevation="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why donâ€™t giving a try to a bike commute?"
                android:textSize="18dp"
                android:layout_margin="25dp"

                />



            <Button
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textAlignment="textStart"
                android:textColor="@color/md_theme_light_onPrimary"
                android:textSize="20sp"
                android:backgroundTint="@color/md_theme_light_primary"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"

                android:layout_marginHorizontal="30dp"


                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>